---
import Plant from "./icons/Plant.astro";
---

<style>
  div {
    display: block;
    width: 50px;
    height: 50px;
  }

  a:hover {
    cursor:
      url("/assets/watering-can-blue.svg") 1 22,
      auto;
  }

  :root.theme-dark {
    a:hover {
      cursor:
        url("/assets/watering-can-white.svg") 1 22,
        auto;
    }
  }

  @media screen and (max-width: 520px) {
    div {
      display: none;
    }
  }
</style>

<a href="/">
  <div>
    <Plant />
  </div>
</a>
