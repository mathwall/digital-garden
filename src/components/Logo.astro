---
import Plant from "./icons/Plant.astro";
---

<style>
  #logo {
    display: block;
    width: 50px;
    height: 50px;
  }

  #logo:hover {
    cursor:
      url("/assets/watering-can-blue.svg") 1 22,
      auto;
  }

  :root.theme-dark {
    #logo:hover {
      cursor:
        url("/assets/watering-can-white.svg") 1 22,
        auto;
    }
  }

  @media screen and (max-width: 520px) {
    .logo-container {
      display: flex;
      width: 100%;
      justify-content: center;
    }
  }
</style>

<div class="logo-container">
  <a id="logo" href="/">
    <Plant />
  </a>
</div>
